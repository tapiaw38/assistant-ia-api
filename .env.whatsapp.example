# Variables de entorno para la integraci√≥n de WhatsApp Business
# Copia este archivo a .env y completa con tus valores reales

# WhatsApp Business API Configuration
WHATSAPP_ACCESS_TOKEN=your_whatsapp_access_token_here
WHATSAPP_PHONE_NUMBER_ID=your_phone_number_id_here
WHATSAPP_WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here
WHATSAPP_APP_SECRET=your_app_secret_here

# API Configuration
API_BASE_URL=http://localhost:8000
JWT_SECRET_KEY=your_jwt_secret_key_here

# Database Configuration (si es necesario)
MONGODB_URI=mongodb://localhost:27017/assistant_ia

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=logs/whatsapp_integration.log

# WhatsApp Business Webhook Configuration
WEBHOOK_BASE_URL=https://your-domain.com
WEBHOOK_VERIFY_TOKEN=your_webhook_verify_token_here

# Rate Limiting (mensajes por minuto)
WHATSAPP_RATE_LIMIT=60

# Template Messages Configuration
WHATSAPP_DEFAULT_LANGUAGE=es
WHATSAPP_BUSINESS_NAME=your_business_name_here

# Features flags
ENABLE_WHATSAPP_INTEGRATION=true
ENABLE_WEBHOOK_SIGNATURE_VALIDATION=true
ENABLE_AUTO_RESPONSE=true
ENABLE_MESSAGE_LOGGING=true
